<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <!--layer-list将item所画的drawable一层层盖在上面-->
            <item>
                <shape>
                    <corners
                        android:bottomLeftRadius="5dp"
                        android:topLeftRadius="5dp"/>
                    <solid android:color="@color/radio_selected"/>
                    <padding
                        android:bottom="2px"
                        android:left="2px"
                        android:right="1px"
                        android:top="2px"/>
                </shape>
            </item>

            <item>
                <shape>
                    <corners
                        android:bottomLeftRadius="5dp"
                        android:topLeftRadius="5dp"/>
                    <solid android:color="@color/title_bg"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners
                        android:bottomLeftRadius="5dp"
                        android:topLeftRadius="5dp"/>
                    <solid android:color="@color/radio_selected"/>
                </shape>
            </item>

        </layer-list>
    </item>
</selector>